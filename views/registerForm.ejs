<%- include('partials/header'); -%>

    <form method="POST" action="/register" >
        <div class="container">
            <div>
                <label for="username"><b>Choose a username</b></label>
                <input type="text" placeholder="Enter Username" name="username" required>
            </div>

            <div>
                <label for="password"><b>Choose a password</b></label>
                <input type="password" placeholder="Enter Password" name="password" required>
            </div>
        
            <div>
                <label for="email"><b>Email</b></label>
                <input type="email" placeholder="alex@email.com" name="email" required>
            </div>

            <div>
                <p><b>Are you an admin?</b></p>
                
                <fieldset  class="inline-element" >

                    <input type="radio" name="admin" value="false" checked="checked" />
                    <label for="admin" class="inline-label">No</label>

                    <input type="radio" name="admin" value="true" />
                    <label for="admin" class="inline-label">Yes</label>
                </fieldset>
            </div>

            <button type="submit">Register</button>
        </div>
    </form>

<%- include('partials/footer'); -%>